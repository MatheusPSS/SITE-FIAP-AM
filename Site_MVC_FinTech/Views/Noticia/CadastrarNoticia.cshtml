@model Site_MVC_FinTech.Models.Noticia

@{
    ViewBag.Title = "CadastrarNoticia";
}

<h2>Cadastrar Noticia</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>@Html.LabelFor(model => model.IDNoticia)</td>
            <td>@Html.TextBoxFor(model => model.IDNoticia, "")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Titulo)</td>
            <td>@Html.TextBoxFor(model => model.Titulo, "")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Materia)</td>
            <td>@Html.TextBoxFor(model => model.Materia, "")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Imagem)</td>
            <td>@Html.TextBoxFor(model => model.Imagem, "")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.DataMateria)</td>
            <td>@Html.TextBoxFor(model => model.DataMateria, "")</td>
        <tr>
            <td colspan="2" style="text-align:right"><input type="submit" value="Cadastrar" /></td>
        </tr>
    </table>

    @Html.ActionLink("Voltar para Noticias", "IndexListarNoticia")
}
