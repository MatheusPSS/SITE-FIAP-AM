@model IEnumerable<Site_MVC_FinTech.Models.Cliente>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.IDCliente)</th>
        <th>@Html.DisplayNameFor(model => model.nomeCliente)</th>
        <th>@Html.DisplayNameFor(model => model.enderecoCliente)</th>
        <th>@Html.DisplayNameFor(model => model.emailCliente)</th>
        <th>@Html.DisplayNameFor(model => model.dtNascCLiente)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.IDCliente)</td>
            <td>@Html.DisplayFor(modelitem => item.nomeCliente)</td>
            <td>@Html.DisplayFor(modelitem => item.enderecoCliente)</td>
            <td>@Html.DisplayFor(modelitem => item.emailCliente)</td>
            <td>@Html.DisplayFor(modelitem => item.dtNascCLiente)</td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.IDCliente}) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.IDCliente})
            </td>
        </tr>
    }
</table>
<br />
@Html.ActionLink("Voltar para Index", "Index")
