@model Site_MVC_FinTech.Models.Pessoa

@{
    ViewBag.Title = "CadastrarPessoa";
}

<h2>Cadastrar Cliente</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>@Html.LabelFor(model => model.IDPessoa)</td>
            <td>@Html.TextBoxFor(model => model.IDPessoa, "")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.NomeCompleto)</td>
            <td>@Html.TextBoxFor(model => model.NomeCompleto, "") @Html.ValidationMessageFor(model => model.NomeCompleto)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Endereco)</td>
            <td>@Html.TextBoxFor(model => model.Endereco, "") @Html.ValidationMessageFor(model => model.Endereco)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Email)</td>
            <td>@Html.TextBoxFor(model => model.Email, "") @Html.ValidationMessageFor(model => model.Email)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.DataNascimento)</td>
            <td>@Html.TextBoxFor(model => model.DataNascimento, "") @Html.ValidationMessageFor(model => model.DataNascimento)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Usuario)</td>
            <td>@Html.TextBoxFor(model => model.Usuario, "") @Html.ValidationMessageFor(model => model.Usuario)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Senha)</td>
            <td>@Html.PasswordFor(model => model.Senha, "") @Html.ValidationMessageFor(model => model.Senha)</td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:right"><input type="submit" value="Cadastrar" /></td>
        </tr>
    </table>

    @Html.ActionLink("Voltar para Index", "IndexPessoa")
}

