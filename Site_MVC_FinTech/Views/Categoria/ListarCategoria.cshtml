@model IEnumerable<Site_MVC_FinTech.Models.Categoria>
@{
    ViewBag.Title = "ListarCategoria";
}

<h2>ListarCategoria</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.IdCategoria)</th>
        <th>@Html.DisplayNameFor(model => model.Descricao)</th>
        <th>@Html.DisplayNameFor(model => model.StaAtivo)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.IdCategoria)</td>
            <td>@Html.DisplayFor(modelitem => item.Descricao)</td>
            <td>@Html.DisplayFor(modelitem => item.StaAtivo)</td>
            <td>
                @Html.ActionLink("Editar", "EditarCategoria", new { id = item.IdCategoria }) |
                @Html.ActionLink("Excluir", "ExcluirCategoria", new { id = item.IdCategoria })
            </td>
        </tr>
    }
</table>
<br />